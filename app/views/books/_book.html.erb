<div class="col-md-8">
  <h2>Books</h2>
  <table class="table table-striped">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinin</th>
      <th></th>
    </tr>
    <% books.each do |book| %>
    <tr>
      <th><%= book.user_id %></th>
      <th><%= link_to book.title, "/books/#{book.id}" %></th>
      <th><%= book.body %></th>
    </tr>
    <% end %>
  </table>
</div>