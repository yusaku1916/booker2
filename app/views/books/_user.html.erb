<div class="col-md-3">
  <div>
    <h2>User info</h2>
    <%= image_tag user.get_profile_image %>
    <table class="table">
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </table>
  </div>

  <!--<div>-->
  <!--  <i class="fa-solid fa-user-gear"></i>-->
  <!--  <= link_to "a", edit_user_path(user.id), class: "btn btn_info" >-->
  <!--</div>-->
  <a href="<%= edit_user_path(user.id) %>" class="btn btn-outline-secondary d-flex justify-content-center align-items-center">
    <i class="fa-solid fa-user-gear"></i>
  </a>


  <div class="container">
    <div class="row no-gutters">
      <h2>New book</h2>
      <div class="form-body">
        <%= form_with model: Book do |f| %>
          <div class="form-group">
            <label>Title</label>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>Body</label>
            <%= f.text_area :body, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>