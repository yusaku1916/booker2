<div>
  <h2>User info</h2>
</div>

<div>
  <h2>New book</h2>
  <%= form_with model: Book do |f| %>
    <h3>Title</h3>
    <%= f.text_field :title %>
    <h3>Body</h3>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</div>

<div>
  <h2>Books</h2>
  <table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinin</th>
      <th></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <th><%= book.user_id %></th>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
    </tr>
    <% end %>
  </table>
</div>
