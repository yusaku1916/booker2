<div class="container">
  <div class="row">
    <%= flash[:notice] %>
  </div>
</div>

<%= render 'books/user', user: @user %>
<div class="col-md-1"></div>

<div class="col-md-8">
  <h2>Book detail</h2>
  <table class="table">
    <tr>
      <td>
        <%= link_to user_path(@book.user_id) do %>
          <%= image_tag @book.user.get_profile_image %>
        <% end %>
      </td>
      <td><%= link_to @book.title, "/books/#{@book.id}" %></td>
      <td><%= @book.body %></td>
      <td>
      <% if @book.user_id == current_user.id%>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
      </td>
      <td>
        <%= link_to "Destoroy", "/books/#{@book.id}", method: :delete, class: "btn btn-danger" %>
      </td>
      <% else %>
      <td></td>
      <% end %>
    </tr>
  </table>

  <%= link_to @user.name, user_path(@book.user_id) %>
</div>