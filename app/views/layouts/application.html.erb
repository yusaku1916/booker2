<!DOCTYPE html>
<html>
  <head>
    <title>Booker2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!--<= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' >-->
    <script src="https://kit.fontawesome.com/0a7485d82d.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm" style="background-color: #aaa;">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <% if user_signed_in? %>
          <ul class="navbar-nav ml-auto d-flex">
            <li class="nav-item">
              <div class='nav-link'>
                <i class="fa-solid fa-house"></i>
                <%= link_to "Home", user_path(current_user.id), class: 'text-dark' %>
              </div>
            </li>
            <li class="nav-item">
              <div class='nav-link'>
                <i class="fa-solid fa-users"></i>
                <%= link_to "Users", users_path, class: 'text-dark' %>
              </div>
            </li>
            <li class="nav-item">
              <div class='nav-link'>
                <i class="fa-solid fa-book-open"></i>
                <%= link_to "Books", books_path, class: 'text-dark' %>
              </div>
            </li>
            <li class="nav-item">
              <div class='nav-link'>
                <i class="fa-solid fa-right-from-bracket"></i>
                <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "text-dark" %>
              </div>
            </li>
          </ul>
          <% else %>
          <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark'  %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark'  %>
              </li>
            </ul>
          <% end %>
        </div>
      </nav>

    </header>
    <div class='container'><div class='row'><%= yield %></div></div>
    <footer style="background-color: #aaa;">
      <div class='container mt-5'>
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
