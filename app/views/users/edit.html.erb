<h1>User Info</h1>

<%= form_with model: @user do |f| %>

  <h4>Name</h4>
  <%= f.text_field :name %>

  <h4>Image</h4>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

  <h4>Introduction</h4>
  <%= f.text_area :introduction %>

  <%= f.submit 'Update Book' %>

<% end %>