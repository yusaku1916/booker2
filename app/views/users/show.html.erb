<%= render 'books/user', user: @user %>
<div class="col-md-1"></div>
<div class="col-md-8">
  <h2>Books</h2>
  <table class="table">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user_id) do %>
          <%= image_tag book.user.get_profile_image %>
        <% end %>
      </td>
      <td><%= link_to book.title, "/books/#{book.id}" %></td>
      <td><%= book.body %></td>

    </tr>
    <% end %>
  </table>
</div>